@model  BANDS.Models.Event
@{
    ViewBag.Title = "EventForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EventForm</h2>


<h1 class="text-warning"> Add New Events</h1>


@using (Html.BeginForm("Saves", "Events"))
{
    <section class="content">
        <div class="row">
            <!-- left column -->
            <!-- right column -->
            <div class="col-md-12">
                <!-- Horizontal Form -->
                <!-- /.box -->
                <!-- general form elements disabled -->
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">BandsForm</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group col-xs-4">



                            @Html.LabelFor(b => b.DateTime)
                            @Html.TextBoxFor(b => b.DateTime, new { @class = "form-control" })



                            @Html.LabelFor(b => b.EventDetail)
                            @Html.TextBoxFor(b => b.EventDetail, new { @class = "form-control" })

                            @Html.LabelFor(b => b.EventTitle)
                            @Html.TextBoxFor(b => b.EventTitle, new { @class = "form-control" })


                            @Html.LabelFor(b => b.Venue)
                            @Html.TextBoxFor(b => b.Venue, new { @class = "form-control" })




                            @Html.HiddenFor(b => b.Id)
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </section>
}


